<div class="row">
  <div class="col-sm">
    <div class="card">
      <h5 class="card-header">
        DFP config
        <button type="button" {{on "click" (fn this.editForm "dfpConfig")}} class="btn btn-dark btn-sm float-right">Edit</button>
      </h5>
      <div class="card-body">
        <p>
            

          
        </p>
      </div>
    </div>
  </div>
  <div class="col-sm">
    <div class="card">
      <h5 class="card-header">
        TFP config
        <button type="button" {{on "click" (fn this.editForm "tfpConfig")}} class="btn btn-dark btn-sm float-right">Edit</button>
      </h5>
      <div class="card-body">
        <p>
            <form >
                <div class="form-group row">
                    <label for="tfpConfig.UVC1BlisterMaxTime" class="col-sm col-form-label">UVC1 Blister max time</label>
                    <div class="col-sm">
                        <Input readonly={{this.tfpIsNotEdited}} id="tfpConfig.UVC1BlisterMaxTime" class="form-control" @type="text" @value={{this.tfpConfig.UVC1BlisterMaxTime}} />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="tfpConfig.UVC2BlisterMaxTime" class="col-sm col-form-label">UVC2 Blister max time</label>
                    <div class="col-sm">
                        <Input readonly={{this.tfpIsNotEdited}} id="tfpConfig.UVC2BlisterMaxTime" class="form-control" @type="text" @value={{this.tfpConfig.UVC2BlisterMaxTime}} />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="tfpConfig.ozoneBlisterMaxTime" class="col-sm col-form-label">Ozone Blister max time</label>
                    <div class="col-sm">
                        <Input readonly={{this.tfpIsNotEdited}} id="tfpConfig.ozoneBlisterMaxTime" class="form-control" @type="text" @value={{this.tfpConfig.ozoneBlisterMaxTime}} />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="tfpConfig.UVC1BlisterTime" class="col-sm col-form-label">UVC1 Blister time</label>
                    <div class="col-sm">
                        <Input readonly={{this.tfpIsNotEdited}} id="tfpConfig.UVC1BlisterTime" class="form-control" @type="string" @value={{this.tfpUVC1BlisterTime}} />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="tfpConfig.UVC2BlisterTime" class="col-sm col-form-label">UVC2 Blister time</label>
                    <div class="col-sm">
                        <Input readonly={{this.tfpIsNotEdited}} id="tfpConfig.UVC2BlisterTime" class="form-control" @type="string" @value={{this.tfpUVC2BlisterTime}} />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="tfpConfig.ozoneBlisterTime" class="col-sm col-form-label">Ozone Blister time</label>
                    <div class="col-sm">
                        <Input readonly={{this.tfpIsNotEdited}} id="tfpConfig.ozoneBlisterTime" class="form-control" @type="string" @value={{this.tfpOzoneBlisterTime}} />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="tfpConfig.mode" class="col-sm col-form-label">Mode</label>
                    <div class="col-sm">
                        <Input readonly={{this.tfpIsNotEdited}} id="tfpConfig.mode" class="form-control" @type="string" @value={{this.tfpConfig.mode}} />
                    </div>
                </div>
                <div class="form-check">
                    <Input disabled={{this.tfpIsNotEdited}} id="tfpConfig.isWaterfallAuto" class="form-check-input" @type="checkbox" @checked={{this.tfpConfig.isWaterfallAuto}}  />
                    <label for="tfpConfig.isWaterfallAuto" class="form-check-label">Waterfall auto</label>
                </div>
                <div class="form-group row">
                    <label for="tfpConfig.startTimeWaterfall" class="col-sm col-form-label">Start time waterfall</label>
                    <div class="col-sm">
                        <Input readonly={{this.tfpIsNotEdited}} id="tfpConfig.startTimeWaterfall" class="form-control" @type="string" @value={{this.tfpConfig.startTimeWaterfall}} />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="tfpConfig.stopTimeWaterfall" class="col-sm col-form-label">Stop time waterfall</label>
                    <div class="col-sm">
                        <Input readonly={{this.tfpIsNotEdited}} id="tfpConfig.stopTimeWaterfall" class="form-control" @type="string" @value={{this.tfpConfig.stopTimeWaterfall}} />
                    </div>
                </div>
                {{#unless this.tfpIsNotEdited}}
                <button type="submit" class="btn btn-primary" {{on "click" (fn this.saveTFPConfig)}}>Save</button>
                {{/unless}}
            </form>
            {{#each this.tfpConfig.errors as |error|}}
              <div class="text-danger">{{error.message}}</div>
            {{/each}}
        </p>
      </div>
    </div>
  </div>
  <div class="col-sm">
    <div class="card">
      <h5 class="card-header">
        Tank config
      </h5>
      <div class="card-body">
        <p>
        </p>
      </div>
    </div>
  </div>
</div>